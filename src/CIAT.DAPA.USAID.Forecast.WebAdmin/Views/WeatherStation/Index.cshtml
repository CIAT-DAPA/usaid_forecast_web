@using CIAT.DAPA.USAID.Forecast.Data.Models
@using System.Linq
@model IEnumerable<CIAT.DAPA.USAID.Forecast.Data.Models.WeatherStation>
@{
    ViewBag.Title = "Estaciones climáticas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Municipio
        </th>
        <th>
            Nombre
        </th>
        <th>
            Origin
        </th>
        <th>
            Visible
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ var m = ((List<Municipality>)ViewBag.municipalities).FirstOrDefault(p => p.id == item.municipality); }
                @m.name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.visible)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Rangos de producción", "Range", new { id = item.id }) |
                @Html.ActionLink("Configuración", "Configuration", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>