@model CIAT.DAPA.USAID.Forecast.WebAdmin.Models.Account.UserEditViewModel

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Account" asp-action="Edit" method="post" class="form-horizontal">
    <h4>Editar usuario</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <label asp-for="Email" class="control-label">@Model.Email</label>
            <input type="hidden" id="Email" name="Email" value="@Model.Email" />
        </div>
    </div>
    <div class="form-group">
        <label for="Role" class="col-md-2 control-label">Roles:</label>
        <div class="col-md-10">
            @foreach (var item in ViewBag.Role)
            {
                @if (Model.Role.Where(p=>p ==item.Value).Count() > 0)
                {
                    <label><input class="form-control" type="checkbox" checked="checked" name="Role" value="@item.Value" /> @item.Text</label>
                }
                else
                {
                    <label><input class="form-control" type="checkbox" name="Role" value="@item.Value" /> @item.Text</label>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <label for="LockoutEnabled" class="control-label col-md-2">Activo:</label>
        <div class="col-md-10">
            @Html.CheckBox("LockoutEnabled", null, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Editar</button>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
}
