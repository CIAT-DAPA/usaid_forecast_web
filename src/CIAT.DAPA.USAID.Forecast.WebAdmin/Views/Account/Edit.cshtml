@model CIAT.DAPA.USAID.Forecast.WebAdmin.Models.Account.UserEditViewModel

@{
    ViewBag.Title = Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Account" asp-action="Edit" method="post" class="form-horizontal">
    <h4>@Localizer["EditUser"]</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <label asp-for="Email" class="control-label">@Model.Email</label>
            <input type="hidden" id="Email" name="Email" value="@Model.Email" />
        </div>
    </div>    
    <div class="form-group">
        <label for="Countries" class="col-md-2 control-label">@Localizer["Countries"]:</label>
        <div class="col-md-10">
            @foreach (var item in ViewBag.ListCountries)
            {
                @if (Model.Countries.Where(p => p == item.Value).Count() > 0)
                {
                    <label><input class="form-control" type="checkbox" checked="checked" name="Countries" value="@item.Value" /> @item.Text</label>
                }
                else
                {
                    <label><input class="form-control" type="checkbox" name="Countries" value="@item.Value" /> @item.Text</label>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@Localizer["EditCMD"]</button>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink(Localizer["Back"].Value, "Index")
</div>

@section Scripts {
}
