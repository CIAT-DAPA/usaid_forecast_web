@model IEnumerable<CIAT.DAPA.USAID.Forecast.Data.Models.Crop>
@{
    ViewBag.Title = Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Localizer["New"].Value, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Localizer["ID"]
        </th>
        <th>
            @Localizer["Name"]
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.id.ToString()
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink(Localizer["Edit"].Value, "Edit", new { id = item.id }) |
                @Html.ActionLink(Localizer["Details"].Value, "Details", new { id = item.id }) |
                @Html.ActionLink(Localizer["Delete"].Value, "Delete", new { id = item.id }) |
                @Html.ActionLink(Localizer["CropConfig"].Value, "CropConfig", new { id = item.id })
            </td>
        </tr>
    }
</table>