@using CIAT.DAPA.USAID.Forecast.Data.Models
@using System.Linq
@model IEnumerable<CIAT.DAPA.USAID.Forecast.Data.Models.Municipality>
@{
    ViewBag.Title = Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Localizer["New"].Value, "Create")
</p>

<div style="display: flex;justify-content: start;gap: 8%;margin-bottom: 1%;">
    @{
        var countries = (SelectList)ViewData["countries"];
        var countryList = countries.ToList();
    }
    @if (countryList.Count > 2)
    {
        <div class="col-md-4" style="
            display: flex;
            align-items: center;
        ">
            @Html.Label("countrySelect", @Localizer["Filter"].Value, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("countrySelect", selectList: (SelectList)ViewData["countries"], optionLabel: null, htmlAttributes: new { @class = "form-control", onchange = "change_filter(this.value, 'Municipality')", style = "display: flex;justify-content: start;gap: 8%;margin-bottom: 1%;" })
            @Html.ValidationMessage("countrySelect", "", new { @class = "text-danger" })
        </div>
    }
    <input type="text" id="txt_search" class="form-control" onkeyup="search_text()" placeholder="@Localizer["Search"]" />
</div>
<table class="table" id="index_list">
    <tr>
        <th>
            @Localizer["State"]
        </th>
        <th>
            @Localizer["ID"]
        </th>
        <th>
            @Localizer["Name"]
        </th>
        <th>
            @Localizer["Visible"]
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @{ var s = ((List<State>)ViewBag.states).FirstOrDefault(p => p.id == item.state); }
        @s.name
    </td>
    <td>
        @item.id.ToString()
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.visible)
    </td>
    <td>
        @Html.ActionLink(Localizer["Edit"].Value, "Edit", new { id = item.id }) |
        @Html.ActionLink(Localizer["Details"].Value, "Details", new { id = item.id }) |
        @Html.ActionLink(Localizer["Delete"].Value, "Delete", new { id = item.id })
    </td>
</tr>
    }
</table>


@section Scripts {
    @await Html.PartialAsync("_ManagementScriptsPartial")
}