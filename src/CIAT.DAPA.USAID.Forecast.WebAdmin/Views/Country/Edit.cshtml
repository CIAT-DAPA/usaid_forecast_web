@model CIAT.DAPA.USAID.Forecast.Data.Models.Country

@{
    ViewBag.Title = Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@Localizer["Country"]</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label class="control-label col-md-2">
            @Localizer["CountryName"]
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            @Localizer["ISO2"]
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.iso2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.iso2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.seasonal_mode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.seasonal_mode, selectList: (SelectList)ViewData["forecast_seasonal"], optionLabel: null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.seasonal_mode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.subseasonal_mode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.subseasonal_mode, selectList: (SelectList)ViewData["forecast_subseasonal"], optionLabel: null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.subseasonal_mode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(Localizer["Back"].Value, "Index")
</div>
