@model CIAT.DAPA.USAID.Forecast.Data.Models.Locality

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Locality</h4>
        <hr />
        @Html.ValidationSummary(true, "Please review the errors and try again", new { @class = "text-danger" })
        
        <div class="form-group">
            <label class="control-label col-md-2" for="country_name">Country's name:</label>
