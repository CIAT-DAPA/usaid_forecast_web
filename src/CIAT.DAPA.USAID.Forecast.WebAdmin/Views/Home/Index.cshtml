@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner_weather.jpg" alt="ASP.NET" class="img-responsive img-carousel" />
            <div class="carousel-caption" role="option">
                <p>
                    Weather Station
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner_rice.jpg" alt="Visual Studio" class="img-responsive img-carousel" />
            <div class="carousel-caption" role="option">
                <p>
                    Rice                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner_maize.jpg" alt="Package Management" class="img-responsive img-carousel" />
            <div class="carousel-caption" role="option">
                <p>
                    Maize                   
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Settings</h2>
        <p>
            You can configure all parameters of the forecast platform from this website
        </p>
    </div>
    <div class="col-md-4">
        <h2>Historical</h2>
        <p>
            You can import the historical data
        </p>
    </div>
    <div class="col-md-4">
        <h2>Forecast</h2>
        <p>
            Search information related with the forecast process
        </p>
    </div>
</div>
