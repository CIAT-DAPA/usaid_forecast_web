@{
    ViewData["Title"] = "Cultivo";
}
<div ng-controller="CropCtrl">

    <!-- Start global variables -->
    <input type="hidden" id="gv_months" name="gv_months" value="1,2" />
    <!-- End global variables -->

    <!-- Start weather station -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-location">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand navbar-text">Localidad</span>
            </div>
            <div class="navbar-location">
                <ul class="nav navbar-nav">
                    <li><a href="#">Lorica</a></li>
                    <li><a href="#">Ibague</a></li>
                    <li><a href="#">Yopal</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End weather station -->
    <!-- Start Probabilities -->
    <section id="probabilities">
        <div class="row section-content">
            <div class="col-lg-12">
                <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                <h2 class="text-center">Rendimiento potencial para el cultivo</h2>
                <p class="text-justify">
                    La siguiente gráfica muestran el resultado del pronóstico agro-climatico para el 
                    período comprendido desde <span id="climate-period">Enero, 2017 a Febrero, 2017</span> 
                    en el municipio <span id="climate-municipality">Lorica</span>.
                </p>
            </div>
        </div>
        <div class="row" id="probabilities_pies"></div>
    </section>
    <!-- End Probabilities -->
</div>


@section Scripts {
    <script src="~/lib/d3/d3.min.js"></script>
    <script src="~/js/lib/d3graphics/base.js"></script>
    <script src="~/js/controllers/crop.js"></script>
}