@{
    ViewData["Title"] = "Cultivo";
}
<div ng-controller="CropCtrl">

    <!-- Start global variables -->
    <input type="hidden" id="api_fs" name="api_fs" value="@ViewBag.api_fs" />
    <input type="hidden" id="api_fs_geographic" name="api_fs_geographic" value="@ViewBag.api_fs_geographic" />
    <input type="hidden" id="api_fs_agronomic" name="api_fs_agronomic" value="@ViewBag.api_fs_agronomic" />
    <input type="hidden" id="api_fs_forecast" name="api_fs_forecast" value="@ViewBag.api_fs_forecast" />
    <input type="hidden" id="api_fs_historical" name="api_fs_historical" value="@ViewBag.api_fs_historical" />
    <input type="hidden" id="gv_months" name="gv_months" value="@ViewBag.gv_months" />
    <!-- End global variables -->
    <!-- Start weather station -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar_municipality">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand navbar-text">Municipios</span>
            </div>
            <div class="navbar-collapse collapse" id="navbar_municipality">
                <ul class="nav navbar-nav">
                    <li ng-repeat="m in municipalities"><a href="/Crop?municipio={{m.name}}">{{m.name}}</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End weather station -->
    <!-- Start Probabilities -->
    <section id="probabilities">
        <div class="row section-content">
            <div class="col-lg-12">
                <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                <h2 class="text-center">Predicción climática</h2>
                <p class="text-justify">
                    Para la ciudad de <span class="text-bold">{{municipality_name}}</span>
                    se presenta la predicción del clima para el período comprendido de
                    <span class="text-bold">{{period_start}} a {{period_end}}</span>.
                    La estación meteorológica que provee los datos para realizar los cálculos es
                    <span class="text-bold">{{ws_entity.name}}</span>,
                    provista por <span class="text-bold">{{ws_entity.origin}}</span>.
                </p>
            </div>
        </div>
        <div class="row" id="probabilities_pies"></div>
    </section>
    <!-- End Probabilities -->
    <!-- Start precipitation -->
    <section ng-repeat="cv in climate_vars" id="{{cv.value}}">
        <div class="row section-content">
            <div class="col-lg-12">
                <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                <h2 class="text-center">{{cv.name}}</h2>
                <p class="text-justify">
                    {{cv.description}}
                </p>
            </div>
        </div>
        <div class="row">
            <!-- Start Climatology -->
            <article id="climatology" class="col-lg-6 article_content">
                <div class="section-content">
                    <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                    <h3 class="text-center">Climatología</h3>
                    <p class="text-justify">
                        La climatología para <span class="text-bold">{{cv.name}}</span>
                        en el período de <span class="text-bold">{{cv.month_start}} a {{cv.month_end}}</span>
                        en el municipio <span class="text-bold">{{municipality_name}}</span> nos indica que:
                        <ul>
                            <li>
                                El mes <span class="text-bold">{{cv.max.month_name}}</span> ha tenido mayores valores de
                                <span class="text-bold">{{cv.name}} ({{cv.max.value | number : 1}} {{cv.metric}})</span>.
                            </li>
                            <li>
                                El mes <span class="text-bold">{{cv.min.month_name}}</span> ha tenido menores valores de
                                <span class="text-bold">{{cv.name}} ({{cv.min.value | number : 1}} {{cv.metric}})</span>.
                            </li>
                        </ul>
                    </p>
                    <div id="{{cv.value}}_bar_climatology" class="bar_climatology"></div>
                </div>
            </article>
            <!-- End Climatology -->
            <!-- Start Historical -->
            <article id="climatic_history" class="col-lg-6 article_content">
                <div class="section-content">
                    <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                    <h3 class="text-center">Histórico climático</h3>
                    <div id="climatic_history_content_{{cv.value}}" class="article_content">
                    </div>
                </div>
            </article>
            <!-- End Historical -->
        </div>
    </section>
    <!-- End precipitation -->
</div>


@section Scripts {
    <script src="~/lib/d3/d3.min.js"></script>
    <script src="~/js/lib/d3graphics/base.js"></script>
    <script src="~/js/controllers/crop.js"></script>
}