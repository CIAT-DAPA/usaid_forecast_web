@{
    ViewData["Title"] = "Clima";
}
<div ng-controller="ClimateCtrl">

    <!-- Start global variables -->
    <input type="hidden" id="api_fs" name="api_fs" value="@ViewBag.api_fs" />
    <input type="hidden" id="api_fs_geographic" name="api_fs_geographic" value="@ViewBag.api_fs_geographic" />
    <input type="hidden" id="api_fs_agronomic" name="api_fs_agronomic" value="@ViewBag.api_fs_agronomic" />
    <input type="hidden" id="api_fs_forecast" name="api_fs_forecast" value="@ViewBag.api_fs_forecast" />
    <input type="hidden" id="api_fs_historical" name="api_fs_historical" value="@ViewBag.api_fs_historical" />
    <input type="hidden" id="gv_months" name="gv_months" value="@ViewBag.gv_months" />
    <!-- End global variables -->
    <!-- Start weather station -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-location">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand navbar-text">Localidad</span>
            </div>
            <div class="navbar-location">
                <ul class="nav navbar-nav">
                    <li ng-repeat="m in municipalities"><a href="/Clima?municipio={{m.name}}">{{m.name}}</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End weather station -->
    <!-- Start Probabilities -->
    <section id="probabilities">
        <div class="row section-content">
            <div class="col-lg-12">
                <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                <h2 class="text-center">Predicción climática</h2>
                <p class="text-justify">
                    Las siguientes gráficas muestran el resultado de las predicciónes climáticas de la
                    variable de precipitación para el período de 
                    <span class="climate_period">{{period_start}} a {{period_end}}</span> 
                    en el municipio <span class="municipality_name">{{municipality_name}}</span>. La estación
                    meteorológica que provee los datos para realizar los cálculos es <span class="ws_name">{{ws_entity.name}}</span>,
                    provista por <span class="ws_origin">{{ws_entity.origin}}</span>.
                </p>
            </div>
        </div>
        <div class="row" id="probabilities_pies"></div>
    </section>
    <!-- End Probabilities -->
    <!-- Start precipitation -->
    <section ng-repeat="cv in climate_vars" id="{{cv.value}}">
        <div class="row section-content">
            <div class="col-lg-12">
                <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                <h2 class="text-center">{{cv.name}}</h2>
                <p class="text-justify">
                    {{cv.description}}
                </p>
            </div>
        </div>
        <div class="row">
            <!-- Start Climatology -->
            <article id="climatology" class="col-lg-6 article_content">
                <div class="section-content">
                    <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                    <h3 class="text-center">Climatología</h3>
                    <p class="text-justify">
                        La siguiente gráfica muestra el promedio para cada mes de {{cv.name}} desde 1981 a 2013
                        en el municipio <span class="municipality_name">{{municipality_name}}</span>. 
                        Los meses mostrados a continuación corresponden a los mismos de la predicción.
                    </p>
                    <div id="{{cv.value}}_bar_climatology" class="bar_climatology"></div>
                </div>
            </article>
            <!-- End Climatology -->
            <!-- Start Historical -->
            <article id="climatology" class="col-lg-6 article_content">
                <div class="section-content">
                    <img src="~/images/icon_help.svg" class="icon_help" alt="Ayuda" />
                    <h3 class="text-center">Histórico climático</h3>
                    <p class="text-justify">
                        La siguiente gráfica muestra los valores observados de {{cv.name}} en los distintos 
                        años para cada mes en especifico. Los datos observados corresponden al municipio de
                        <span class="municipality_name">{{municipality_name}}</span>.
                    </p>
                    <div id="{{cv.value}}_line_historical"></div>
                </div>
            </article>
            <!-- End Historical -->
        </div>
    </section>
    <!-- End precipitation -->
</div>


@section Scripts {
    <script src="~/lib/d3/d3.min.js"></script>
    <script src="~/js/lib/d3graphics/base.js"></script>
    <script src="~/js/lib/d3graphics/pie.js"></script>
    <script src="~/js/lib/d3graphics/bars.js"></script>
    <script src="~/js/lib/d3graphics/line.js"></script>
    <script src="~/js/controllers/climate.js"></script>
}