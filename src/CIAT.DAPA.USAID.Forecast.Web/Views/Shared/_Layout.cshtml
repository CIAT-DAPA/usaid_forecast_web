<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Steven Sotelo" />
    <title>@ViewData["Title"] - Aclímate Colombia Pronósticos</title>
    <meta name="description" content="@ViewData["Meta_Description"]">
    <meta name="keywords" content="@ViewData["Meta_Keywords"]">

    <!-- Start SEO -->
    <script src="~/js/seo/analytics.js"></script>
    <!-- End SEO -->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="~/lib/please-wait/build/please-wait.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link rel="shortcut icon" href="http://www.aclimatecolombia.org/wp-content/uploads/2013/06/CONVENIO3.png">

</head>
<body ng-app="ForecastApp">
    <header class="header-logo">
        <h1 class="text-center">
            <a href="http://www.aclimatecolombia.org"><img alt="logo" src="~/images/logo.png" class="text-center" /></a>
        </h1>
    </header>
    <nav class="navbar navbar-default" id="mainMenu">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar_main">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Aclímate Colombia - Pronósticos</a>
            </div>

            @Html.Partial("_Menu")

        </div>
    </nav>

    <div class="body-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <footer class="footer clearfix">

        <div class="form-group">
            <div class="col-lg-6 form-group">
                <div class="col-lg-12" style="color:white;">
                    <h4>Nuestros socios</h4>
                    <hr />
                </div>
                <div class="col-lg-3 col-xs-6 form-group">
                    <center>
                        <a href="http://www.fedearroz.com.co/new/index.php" target="_blank"><img class="img-rounded" src="~/images/partners/fedearroz.png" alt="FEDEARROZ" width="80" height="80"></a>
                    </center>
                </div>
                <div class="col-lg-3 col-xs-6 form-group">
                    <center>
                        <a href="https://www.federaciondecafeteros.org/" target="_blank"><img class="img-rounded" src="~/images/partners/federacionnacionaldecafeteros.jpg" alt="Federeacion nacional de cafeteros" width="80" height="80"></a>
                    </center>
                </div>
                <div class="col-lg-3 col-xs-6 form-group">
                    <center>
                        <a href="http://www.fenalce.org/nueva/index.php" target="_blank"><img class="img-rounded" src="~/images/partners/fenalce.png" alt="FENALCE" width="80" height="80" style="padding:12px 0;"></a>
                    </center>
                </div>
                <div class="col-lg-3 col-xs-6 form-group">
                    <center>
                        <a href="http://www.ideam.gov.co/" target="_blank"><img class="img-rounded" src="~/images/partners/ideam.png" alt="IDEAM" width="80" height="80" style="padding:8px;"></a>
                    </center>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="col-lg-12" style="color:white;">
                    <h4>Donantes</h4>
                    <hr />
                </div>
                <div class="col-lg-3 col-xs-6">
                    <center>
                        <a href="https://www.usaid.gov/" target="_blank"><img class="img-rounded" src="~/images/partners/usaid.png" alt="USAID" width="80" height="80"></a>
                    </center>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-lg-12">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <p class="text-justify">
                        CIAT All Rights reserved <br />
                        Teléfonos de contacto: (2) 4450000 Ext. 3367, 3579 <br />
                        Email: aclimatecolombia@gmail.com <br />
                        Colombia
                    </p>
                </div>
                <div class="col-md-offset-4 col-md-4">
                    <p class="text-justify">
                        <a href="http://aclimatecolomb.wpengine.com/contactenos/">Contáctenos</a> /
                        <a href="http://aclimatecolomb.wpengine.com/html-site-map">Mapa del Sitio</a> /
                        <a href="">Políticas de Privacidad</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    @Html.Partial("_Modal")
    
    <!-- Start Loader -->
    <script src="~/lib/please-wait/build/please-wait.js"></script>
    <script type="text/javascript">
        window.loading_screen = window.pleaseWait({
            logo: "../images/logo.png",
            backgroundColor: '#ffffff',
            loadingHtml: '<div class="spinner"><div class="rect1"></div><div class="rect2"></div><div class="rect3"></div><div class="rect4"></div><div class="rect5"></div></div>'
        });
    </script>
    <!-- Start Loader -->

    <script src="~/js/lib/compatibilty/ie.js"></script>
    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>-->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-cookies/angular-cookies.min.js"></script>
    <script src="~/js/menu.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/services/setup.js"></script>
    <script src="~/js/services/assist.js"></script>
    <script src="~/js/services/tutorial.js"></script>
    <script src="~/js/services/forecast_api.js"></script>
    <script src="~/js/services/agronomy.js"></script>
    <script src="~/js/services/cultivar.js"></script>
    <script src="~/js/services/soil.js"></script>
    <script src="~/js/services/crop_vars.js"></script>
    <script src="~/js/services/geographic.js"></script>
    <script src="~/js/services/municipality.js"></script>
    <script src="~/js/services/weather_station.js"></script>
    <script src="~/js/services/climate_climatology.js"></script>
    <script src="~/js/services/climate_historical.js"></script>
    <script src="~/js/services/climate_forecast.js"></script>
    <script src="~/js/services/climate_scenario.js"></script>
    <script src="~/js/services/crop_yield_forecast.js"></script>
    <script src="~/js/services/crop_yield_historical.js"></script>
    <script src="~/js/controllers/sub_menu_ctr.js"></script>
    <script src="~/js/controllers/location_ctr.js"></script>
    <script src="~/js/controllers/assist_ctr.js"></script>
    <script src="~/js/controllers/social_media_ctr.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
