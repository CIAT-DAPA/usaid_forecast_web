<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Steven Sotelo" />
    <title>@ViewData["Title"] - Aclímate Colombia Pronósticos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <header class="header-logo">
        <h1 class="text-center">
            <a href="http://www.aclimatecolombia.org"><img alt="logo" src="~/images/logo.png" class="text-center" /></a>
        </h1>
    </header>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand navbar-text">Aclímate Colombia - Pronósticos</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Clima" asp-action="Index">Clima</a></li>
                    <li><a asp-area="" asp-controller="Arroz" asp-action="Index">Arroz</a></li>
                    <li><a asp-area="" asp-controller="Maiz" asp-action="Index">Maíz</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content" ng-app="ForecastApp">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <footer class="footer clearfix">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p class="text-justify">
                        CIAT All Rights reserved <br />
                        Teléfonos de contacto: (2) 4450000 Ext. 3367, 3579 <br />
                        Email: aclimatecolombia@gmail.com <br />
                        Colombia
                    </p>
                </div>
                <div class="col-md-offset-4 col-md-4">
                    <p class="text-justify">
                        <a href="http://aclimatecolomb.wpengine.com/contactenos/">Contáctenos</a> /
                        <a href="http://aclimatecolomb.wpengine.com/html-site-map">Mapa del Sitio</a> /
                        <a href="">Políticas de Privacidad</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/services/forecast.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
